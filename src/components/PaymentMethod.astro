---
import ModalsPaymen from "../components/Modals/ModalsPaymen.astro";
---

<section class="max-w-4xl mx-auto my-10">
  <h1
    class="text-2xl md:text-3xl font-semibold text-gray-800 leading-tight tracking-tighter"
  >
    Payment Method
  </h1>
  <div class="card w-96 glass mt-11">
    <figure>
      <img
        src="https://daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.jpg"
        alt="car!"
      />
    </figure>
    <div class="card-body">
      <h2 class="card-title">Get Started</h2>
      <p>Set up simple and convenient charging</p>
      <div class="card-actions justify-end mt-4">
        <ModalsPaymen />
        <button
          onclick="my_modal_3.showModal()"
          class="btn text-black font-semibold py-2 w-full border-2 border-black rounded transition duration-300 ease-in-out hover:bg-black hover:text-white focus:outline-none focus:ring-2 focus:ring-black focus:ring-opacity-50 mr-2 mb-2"
          >Add Card!</button
        >
      </div>
    </div>
  </div>
</section>
